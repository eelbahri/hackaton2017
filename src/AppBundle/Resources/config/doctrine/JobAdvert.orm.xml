<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\JobAdvert" table="job_advert">
    <id name="idJobAdvert" type="integer" column="id_job_advert">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="salaryMin" type="integer" column="salary_min" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="salaryMax" type="integer" column="salary_max" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nbPlace" type="integer" column="nb_place" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="tags" type="text" column="tags" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
  </entity>
</doctrine-mapping>
